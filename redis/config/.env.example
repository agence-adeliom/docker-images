# Example .env file for Redis Adeliom
# Copy this file to .env and update the values

# ========== AUTHENTICATION ==========
# Production: Always set a strong password
REDIS_PASSWORD=change_this_to_a_secure_password

# Development only: Allow empty password
# ALLOW_EMPTY_PASSWORD=yes

# Alternative: Use password file
# REDIS_PASSWORD_FILE=/run/secrets/redis_password

# ========== BASIC CONFIGURATION ==========
REDIS_PORT_NUMBER=6379
REDIS_DATABASE=16

# ========== PERSISTENCE ==========
# Enable AOF persistence (recommended)
REDIS_AOF_ENABLED=yes

# Custom RDB policy (optional)
# REDIS_RDB_POLICY=900 1 300 10 60 10000

# Disable RDB completely (not recommended)
# REDIS_RDB_POLICY_DISABLED=yes

# ========== PERFORMANCE ==========
# Multi-threaded I/O (Redis 6.0+)
# REDIS_IO_THREADS=4
# REDIS_IO_THREADS_DO_READS=yes

# ========== SECURITY ==========
# Disable dangerous commands (recommended for production)
# REDIS_DISABLE_COMMANDS=FLUSHDB,FLUSHALL,CONFIG,KEYS,DEBUG

# ========== ADVANCED ==========
# Enable debug mode (development only)
# MODE_DEBUG=true

# Timezone
TZ=Europe/Paris
